void logicalAnd(byte a[], byte b[]) {
  for (int i = 0; i < 64; i++) {
//    a[i] = a[i]&b[i];
    a[i] = a[i]&(pgm_read_byte_near(b + i));
  }
}

void logicalOr(byte a[], byte b[]) {
  for (int i = 0; i < 64; i++) {
//    a[i] = a[i]|b[i];
    a[i] = a[i]|(pgm_read_byte_near(b + i));
  }
}

void logicalAndNon(byte a[], byte b[]) {
  for (int i = 0; i < 64; i++) {
//    a[i] = a[i]&(~b[i]);
    a[i] = a[i]&(~pgm_read_byte_near(b + i));
  }
}
